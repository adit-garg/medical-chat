# Database
DATABASE_URL="postgresql://user:password@localhost:5432/medical_translator"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# API Keys
# OpenAI (for AI Summary - uses gpt-4o-mini by default)
OPENAI_API_KEY="sk-your-openai-key-here"
# Optional: override model (default: gpt-4o-mini)
# OPENAI_SUMMARY_MODEL="gpt-4o-mini"
# Translation: use one of the following (first set wins)
# Google Cloud (paid)
GOOGLE_TRANSLATION_API_KEY="your-google-cloud-key-here"
# LibreTranslate (free, self-host or use public API)
# LIBRETRANSLATE_URL="https://libretranslate.com"
# MyMemory is used automatically when neither above is set (free, no key)

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Logging
LOG_LEVEL="info"
