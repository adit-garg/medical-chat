// Medical Translator Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(PATIENT)
  language  String   @default("en") // Preferred language code
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  conversationsAsDoctor  Conversation[] @relation("DoctorConversations")
  conversationsAsPatient Conversation[] @relation("PatientConversations")
  messages               Message[]
  refreshTokens          RefreshToken[]

  @@index([email])
  @@map("users")
}

enum UserRole {
  DOCTOR
  PATIENT
}

model Conversation {
  id               String   @id @default(uuid())
  doctorId         String
  patientId        String
  doctorLanguage   String   @default("en")
  patientLanguage  String   @default("es")
  status           ConversationStatus @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  doctor   User      @relation("DoctorConversations", fields: [doctorId], references: [id], onDelete: Cascade)
  patient  User      @relation("PatientConversations", fields: [patientId], references: [id], onDelete: Cascade)
  messages Message[]
  summary  Summary?

  @@index([doctorId])
  @@index([patientId])
  @@index([createdAt])
  @@map("conversations")
}

enum ConversationStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

model Message {
  id             String      @id @default(uuid())
  conversationId String
  senderId       String
  senderRole     UserRole
  content        String      @db.Text
  translatedContent String?  @db.Text
  type           MessageType @default(TEXT)
  audioUrl       String?     // Base64 or external URL
  audioData      String?     @db.Text // For storing base64 audio
  audioDuration  Float?      // Duration in seconds
  createdAt      DateTime    @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
  @@map("messages")
}

enum MessageType {
  TEXT
  AUDIO
}

model Summary {
  id             String   @id @default(uuid())
  conversationId String   @unique
  content        String   @db.Text
  symptoms       String[] // Array of extracted symptoms
  diagnoses      String[] // Array of diagnoses
  medications    String[] // Array of medications
  followUpActions String[] // Array of follow-up actions
  generatedAt    DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("summaries")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}
